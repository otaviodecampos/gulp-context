{
    "scope": {
        "source-dir": "app/source/",
        "target-dir": "app/build/",
        "paths": {
            "assets": "/assets/",
            "js": "/assets/js/",
            "styles": "/assets/styles/",
            "vendor": "/assets/vendor/"
        }
    },
    "context": {
        "development": {
            "default": true,
            "clean": true,
            "watch": false,
            "task-dir": "tasks/development",
            "task": {
                "copy/test2": ["copy/test3", "copy/test4"],
                "copy/test3": "copy/test",
                "copy/test4": "copy/test",
                "copy/test": false
            }
        },
        "production": {
            "clean": true,
            "from-target-context": "development",
            "task-dir": "tasks/production",
            "task": {
                "test": true
            }
        }
    }
}
